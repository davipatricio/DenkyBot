{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "outputs": [
        "build/**"
      ],
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": [
        "packages/**"
      ],
      "cache": false
    },
    "types:check": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": [
        "^build",
        "^lint:fix",
        "^generate:postgres"
      ],
      "outputs": [
        "build/**"
      ],
      "cache": false
    },
    "generate:postgres": {
      "outputs": [
        "node_modules/**"
      ],
      "cache": false
    }
  }
}