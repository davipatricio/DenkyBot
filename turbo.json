{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build",
        "^lint:fix"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": [
        "src/**"
      ]
    },
    "types:check": {
      "outputs": []
    },
    "deploy": {
      "dependsOn": [
        "^build",
        "^lint:fix"
      ],
      "outputs": [
        "build/**"
      ]
    },
    "generate:postgres": {
      "dependsOn": ["^generate:postgres"],
      "outputs": [
        "node_modules/**"
      ]
    }
  }
}