{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/main",
  "pipeline": {
    "build": {
        "cache": false,
        "dependsOn": [
            "^build"
        ],
        "outputs": [
            "dist/**"
        ]
    },
    "types:check": {
        "cache": false,
        "dependsOn": [
            "^types:check"
        ]
    },
    "lint:fix": {
        "cache": false,
        "dependsOn": [
            "^lint:fix"
        ],
        "outputs": [
            "packages/**"
        ]
    },
    "generate:postgres": {
        "cache": false,
        "dependsOn": [
            "^generate:postgres"
        ],
        "outputs": [
            "node_modules/**"
        ]
    }
  }
}
